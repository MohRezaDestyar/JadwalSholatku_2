<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/activity_tasbih"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/background"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Tasbih">

    <at.markushi.ui.CircleButton
        android:id="@+id/circleButton"
        android:layout_height="128dp"
        android:layout_width="128dp"
        android:layout_centerInParent="true"
        android:onClick="countIn"
        app:cb_color="#FFE91912"
        app:cb_pressedRingWidth="16dp"
        android:src="@drawable/ic_album_black_24dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_below="@id/circleButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="resetCount"
        android:text="RESET" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:textSize="45dp"
        android:textColor="#ffff"
        android:id="@+id/counterValue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"/>


</RelativeLayout>
